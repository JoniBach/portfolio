{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "paths": {
    "@components/*": [
      "components/*"
    ],
    "@docs/*": [
      "docs/*"
    ],
    "@layouts/*": [
      "layouts/*"
    ],
    "@pages/*": [
      "pages/*"
    ],
    "@data/*": [
      "data/*"
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}